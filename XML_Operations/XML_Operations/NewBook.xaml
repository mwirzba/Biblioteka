<UserControl x:Class="XML_Operations.NewBook"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XML_Operations"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="500">
    <Grid>
        <StackPanel>
            <Label Content="Book Informations" Margin="10 10 0 0"/>
            <Label Content="Title"  Margin="10 10 0 0"/>
            <TextBox x:Name="titleBox" Width="200" HorizontalAlignment="Left" Margin="10 10 0 0"/>
            <Label Content="Category" Margin="10 10 0 0"/>
            <TextBox x:Name="categoryBox" Width="200" HorizontalAlignment="Left" Margin="10 10 0 0"/>
            <Label Content="Release date" Margin="10 10 0 0"/>
            <TextBox x:Name="dateBox" Width="200" HorizontalAlignment="Left" Margin="10 10 0 0"/>
            <Button Content="Add" Width="45" Height="25" HorizontalAlignment="Left" Margin="10 20 0 0" Click="AddNewBook"/>
            <Label x:Name="userMessage" Content="" HorizontalAlignment="Left" Margin="10 20 0 0" Width="200"/>
        </StackPanel>
            
    </Grid>
</UserControl>
